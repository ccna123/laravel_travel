{
  "compilerOptions": {
      "target": "es5",
      "module": "ES2022",
      "moduleResolution": "Node",
      "jsx": "react",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "typeRoots": ["./node_modules/@types"],
      "paths": {
          "*": [
              "*"
          ]
      }
  },
  "include": [
      "resources/assets",
      "resources/js",
      "./custom.d.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "types": ["vite/client", "vitest/globals"] 
}